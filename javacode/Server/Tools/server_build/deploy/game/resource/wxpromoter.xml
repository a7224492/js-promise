<?xml version="1.0" encoding="UTF-8"?>
<Purchase>
	<!-- rewardType: 奖励类型,Cash 钞票, Diamond 钻石 -->
	<!-- wechatPublicAccount: 公众号 -->
	<!-- StartTime: 开始时间 -->
	<!-- EndTime: 结束时间 -->
    <ActivityConfig rewardType="Diamond" wechatPublicAccount="雀友会互动娱乐">
        <StartTime time="2018-05-26 18:00:00" />
        <EndTime time="2018-06-02 23:59:59" />
    </ActivityConfig>

	<!-- gameCountForActivity: 玩家完成任务需要进行的牌局数 -->
    <InviteeConfig gameCountForActivity="1" />

	<!-- needRegisteredTime: 玩家拥有邀请资格的最小注册天数 -->
	<!-- rewardLimitPerCycle: 玩家每个周期的最大奖励数量 -->
	<!-- hoursPerCycle: 每个周期持续的小时数 -->
	<!-- inviteeCount: 邀请成功的玩家数，rewardCount: 达到这一邀请数量后给玩家奖励的数量 -->
    <PromoterConfig needRegisteredTime="3" rewardLimitPerCycle="200" hoursPerCycle="174">
        <Reward inviteeCount="1" rewardCount="7" />
        <Reward inviteeCount="3" rewardCount="17" />
        <Reward inviteeCount="6" rewardCount="30" />
        <Reward inviteeCount="9" rewardCount="40" />
        <Reward inviteeCount="15" rewardCount="86" />
    </PromoterConfig>

	<!-- gmWeinxin: 客户端微信号 -->
	<!-- minGet: 每天可以领取的最小数量 -->
	<!-- maxGet: 每天可以领取的最大数量 -->
	<!-- maxCount: 每天最多领取的次数 -->
    <!-- 开始时间：5月26日下午18:00  -->
    <!-- 结束时间：6月2日24:00  -->
    <!-- 玩家完成任务需要进行的牌局数：1局 -->
    <!-- 玩家拥有邀请资格的最小注册天数：3天 -->
    <!-- 每个周期持续的小时数：174小时 -->
    <!-- 无最大最小限制，可以一直领取，持续仅一周期 -->
    <GetRewardConfig gmWeixin="雀友会互动娱乐" minGet="1" maxGet="200" maxCount="10" />
</Purchase>




